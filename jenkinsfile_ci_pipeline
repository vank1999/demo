
pipeline {
    agent {
        label "buildserver"
    }
    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "maven3.9.5"
    }

    stages {
        stage('prepare env') {
            steps {
                echo "prepare env"
                git branch: 'main', url: 'https://gitlab.com/rns-app/student-app.git'
            }
        }
        stage('compile source code') {
         tools {
                // Install the Maven version configured as "M3" and add it to the path.
                maven "maven3.9.5"
    }
            steps {
                echo "compile source code"
                sh 'mvn clean compile'
            }
        }
        stage('pre deployment tests') {
            steps {
                echo 'pre deployment tests'
                sh 'java -version'
                sh 'echo 2 | sudo alternatives --config java'

                sh 'mvn clean test'

                sh 'echo 1 | sudo alternatives --config java'
                sh 'java -version'
            }
            post {
                success{
                    junit stdioRetention: '', testResults: 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('packaging app') {
            steps {
                echo 'packaging app'

                sh 'mvn clean package -DskipTests'
            }
            post {
                success{
                        archiveArtifacts artifacts: 'target/*.war', followSymlinks: false
                    }
            }
        }
        stage('deployment app') {
            steps {
                echo 'deployment app'
                 sh 'sudo cp target/*.war /opt/appserver/webapps/student.war'
            }
        }
    }
}
